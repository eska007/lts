<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kaist.lts.ClientActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/attach_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="58dp"
        android:layout_toEndOf="@+id/section_label"
        android:src="@drawable/img_attach"
        android:visibility="gone" />
    7

    <Button
        android:id="@+id/upload_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/attach_icon"
        android:layout_centerHorizontal="true"
        android:background="#039be5"
        android:gravity="center"
        android:text="Upload"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/frag_exp_list_view_title1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textSize="20dp"
        android:layout_margin="1dp"
        android:visibility="gone"
        android:background="#96d3ff"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:id="@+id/frag_exp_list_view_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/frag_exp_list_view_title1"
        android:text="Subject"
        android:textSize="20dp"
        android:layout_margin="1dp"
        android:visibility="gone"
        android:background="#96d3ff"
        android:gravity="center_vertical|center_horizontal" />

    <ExpandableListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/request_list_view"
        android:layout_alignParentStart="true"
        android:groupIndicator="@null"
        android:visibility="gone"
        android:layout_below="@id/frag_exp_list_view_title1">
    </ExpandableListView>


</RelativeLayout>
