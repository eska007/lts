<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/req_list_item_id"
        android:text="1"
        android:textSize="20dp"
        android:background="#d9efff"
        android:layout_margin="1dp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#000000" />
    <TextView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/req_list_item_id"
        android:layout_gravity="center_vertical"
        android:id="@+id/req_list_item_desc"
        android:text="sub Text"
        android:textSize="20dp"
        android:layout_margin="1dp"
        android:background="#d9efff"
        android:paddingLeft="5dp"
        android:gravity="center_vertical"
        android:textColor="#000000" />

    <Button
        android:id="@+id/request_apply_btn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_margin="1dp"
        android:layout_gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:visibility="gone"
        android:text="Apply"
        android:textSize="15dp"
        android:textColor="#000000" />

    <Button
        android:id="@+id/request_evaluation_btn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_margin="1dp"
        android:layout_gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:visibility="gone"
        android:text="Evaluate"
        android:textSize="15dp"
        android:textColor="#000000" />
    <!--android:layout_toRightOf="@id/req_list_item_desc"-->
</LinearLayout>