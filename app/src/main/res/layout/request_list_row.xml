<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/req_list_item_id"
        android:text="1"
        android:textSize="30dp"
        android:background="#d9efff"
        android:layout_margin="1dp"
        android:gravity="center_vertical|center_horizontal"/>
    <TextView
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/req_list_item_id"
        android:id="@+id/req_list_item_desc"
        android:text="sub Text"
        android:textSize="30dp"
        android:layout_margin="1dp"
        android:background="#d9efff"
        android:paddingLeft="5dp"/>

    <TextView
        android:id="@+id/req_list_applied"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/req_list_item_desc"
        android:layout_gravity="center_vertical"
        android:text="Applied"
        android:textSize="15dp"
        android:layout_margin="1dp"
        android:visibility="gone"
        android:paddingLeft="5dp"/>

    <Button
        android:id="@+id/request_apply_btn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/req_list_item_desc"
        android:layout_gravity="center_vertical"
        android:focusable="false"
        android:visibility="gone"
        android:text="Apply"
        android:textSize="15dp"/>
</LinearLayout>